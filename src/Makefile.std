#
# Default target.
#
all: sil


#
# Install the game.
#

install: sil
	cp sil ..


#
# Build the "Sil" program
#

sil: $(OBJS)
	$(CC) $(CFLAGS) $(LDFLAGS) -o sil $(OBJS) $(LIBS)


#
# Clean up old junk
#

clean:
	-rm -f *.o sil

#
# Generate dependencies automatically
#

depend:
	makedepend -D__MAKEDEPEND__ $(SRCS)


